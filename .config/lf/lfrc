cmd open-within %{{
    case $(file --brief --mime-type "$f") in
        text/*) lf -remote "send $id push e" ;;
        inode/*) lf -remote "send $id push l" ;;
        *) devour xdg-open "$f" ;;
    esac
}}

map <enter> open-within

map Q :${{ echo $PWD >&${LFCD_DIR_FD} }}; quit
map q :${{ echo $OLDPWD >&${LFCD_DIR_FD} }}; quit

